    <script>
        function e3_readmore(){
            boton = document.getElementById("e3_ver_mas");
            parrafo_hidden = document.getElementById("e3_parrafo_hidden");
            puntos_suspensivos = document.getElementById("e3_suspensivos");

            if (puntos_suspensivos.style.display === "none") {
                puntos_suspensivos.style.display = "inline";
                boton.innerHTML = "Leer mas";
