<!-- script news section -->
<script>
    function openModal() {
        document.getElementById("newsMyModal").style.display = "block";
    }

    function closeModal() {
        document.getElementById("newsMyModal").style.display = "none";
    }

    var newSlideIndex = 1;
    showSlides(newSlideIndex);

    function plusSlides(n) {
        showSlides(newSlideIndex += n);
    }

    function currentSlide(n) {
        showSlides(newSlideIndex = n);
    }

    function showSlides(n) {
        var i;
        var newSlides = document.getElementsByClassName("newsMySlides");
        var newsDots = document.getElementsByClassName("demo");

        if (n > newSlides.length) {newSlideIndex = 1}
        if (n < 1) {newSlideIndex = newSlides.length}
        for (i = 0; i < newSlides.length; i++) {
            newSlides[i].style.display = "none";
        }
        for (i = 0; i < newsDots.length; i++) {
            newsDots[i].className = newsDots[i].className.replace(" active", "");
        }
        newSlides[newSlideIndex-1].style.display = "block";
        newsDots[newSlideIndex-1].className += " active";

    }
</script>